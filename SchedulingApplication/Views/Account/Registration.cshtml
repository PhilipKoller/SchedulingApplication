@model User
@{
    ViewBag.Title = "Registration Page";
}
@*<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Login</a>
</nav>*@


<div class="row justify-content-center">
        <div>
            <img class="mb-4" src="~/images/TTULogo.png" />
        </div>

        <div class="container-sm bg-light mt-5 center ">
            <div asp-validation-summary="All"></div>
            <form asp-controller="Account" asp-action="Registration" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName">First Name</label>
                        <input placeholder="First Name" class="form-control" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName">Last Name</label>
                        <input placeholder="Last Name" class="form-control" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Email"></label>
                        <input placeholder="Email Address" class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Password"></label>
                        <input placeholder="Password" class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="form-group col-sm-4">
                        <label asp-for="Area" class="col-sm-2 col-form-label"></label>
                        <select asp-for="Area" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Area>()">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="Area" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="Rank" class="col-sm-2 col-form-label"></label>
                        <select asp-for="Rank" class="custom-select mr-sm-2"
                                asp-items="Html.GetEnumSelectList<Rank>()">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="Rank" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>

@section Scripts{
    
     

}
